@model IEnumerable<EcoTravel_ASPMVC.Models.ClientViewModel.ClientListItem>

@{
    ViewData["Title"] = "Index";
}

<div style="text-align:center;padding:20px;">
    <h1>Liste des clients</h1>
</div>
<div style="margin:auto;width:60%;background-color:lightgreen;padding:20px;">
    <table class="table">
        <thead>
            <tr style="background-color:darkgreen;color:white;">
                <th>
                    @Html.DisplayNameFor(model => model.nom)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.prenom)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.pays)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.telephone)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr style="background-color:lightgreen;">
                    <td>
                        @Html.DisplayFor(modelItem => item.nom)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.prenom)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.pays)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.telephone)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.idClient }, new { @class = "btn btn-primary btn-sm" }) |
                        @Html.ActionLink("Details", "Details", new { id = item.idClient }, new { @class = "btn btn-info btn-sm" }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.idClient }, new { @class = "btn btn-danger btn-sm" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<p style="text-align:center;">
    <a asp-action="Create" class="btn btn-success">Ajouter un nouveau client</a>
</p>